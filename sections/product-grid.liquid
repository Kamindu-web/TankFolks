{% comment %}
  Product Grid Section
  Allows either collection-based or manual featured products.
{% endcomment %}

<section class="product-grid" data-section-id="{{ section.id }}">
    <style>
      #pg-wrap-{{ section.id }} {
        max-width: {{ section.settings.max_width }}px;
        margin: 0 auto;
        padding: 40px 16px;
      }
      #pg-wrap-{{ section.id }} h2 {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 28px;
        display: flex;
        align-items: center;
        gap: 8px;
      }
  
      .pg-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 24px;
      }
      .pg-card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform .2s ease, box-shadow .2s ease;
      }
      .pg-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 18px rgba(0,0,0,.12);
      }
      .pg-img-wrap {
        width: 100%;
        padding-top: 75%;
        position: relative;
        background: #fafafa;
      }
      .pg-img-wrap img {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        object-fit: contain;
      }
      .pg-content {
        padding: 14px 16px 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
      }
      .pg-title {
        font-size: 16px;
        font-weight: 600;
        color: #111;
        margin-bottom: 10px;
        flex: 1;
      }
      .pg-price {
        font-size: 15px;
        font-weight: 700;
        color: #000;
      }
    </style>
  
    <div id="pg-wrap-{{ section.id }}">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
  
      <div class="pg-grid">
        {%- if section.settings.source == 'collection' and section.settings.collection != blank -%}
          {%- assign coll = collections[section.settings.collection] -%}
          {%- for product in coll.products limit: section.settings.limit -%}
            <div class="pg-card">
              <div class="pg-img-wrap">
                <a href="{{ product.url }}">
                  <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title | escape }}">
                </a>
              </div>
              <div class="pg-content">
                <a class="pg-title" href="{{ product.url }}">{{ product.title }}</a>
                <div class="pg-price">{{ product.price | money }}</div>
              </div>
            </div>
          {%- endfor -%}
        {%- elsif section.settings.source == 'manual' -%}
          {%- for block in section.blocks limit: section.settings.limit -%}
            {%- assign product = all_products[block.settings.product] -%}
            {% if product %}
              <div class="pg-card">
                <div class="pg-img-wrap">
                  <a href="{{ product.url }}">
                    <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title | escape }}">
                  </a>
                </div>
                <div class="pg-content">
                  <a class="pg-title" href="{{ product.url }}">{{ product.title }}</a>
                  <div class="pg-price">{{ product.price | money }}</div>
                </div>
              </div>
            {% endif %}
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Product Grid",
    "settings": [
      { "type": "text", "id": "heading", "label": "Section Heading", "default": "Featured Products" },
      { "type": "range", "id": "max_width", "min": 800, "max": 1600, "step": 20, "label": "Content max width (px)", "default": 1200 },
      {
        "type": "select",
        "id": "source",
        "label": "Product Source",
        "options": [
          { "value": "collection", "label": "Collection" },
          { "value": "manual", "label": "Manual selection" }
        ],
        "default": "collection"
      },
      { "type": "collection", "id": "collection", "label": "Choose collection" },
      { "type": "range", "id": "limit", "min": 2, "max": 20, "step": 1, "label": "Number of products to show", "default": 8 }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          { "type": "product", "id": "product", "label": "Select product" }
        ]
      }
    ],
    "presets": [{ "name": "Product Grid", "category": "Products" }]
  }
  {% endschema %}
  